    config: {type: str, default: "config/config.yaml"}
    command: "python src/stage_02_base_model_creation.py"
  
  prepare_callbacks:
    config: {type: str, default: "config/config.yaml"}
    command: "python src/stage_03_prepare_callbacks.py"
  
  model_training:
    config: {type: str, default: "config/config.yaml"}
    command: "python src/stage_04_model_train.py"